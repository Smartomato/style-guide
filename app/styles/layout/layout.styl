@import 'nib'
@import '../tools/_colors'
@import '../tools/_mixins'
@import '../tools/_variables'

// Стили Ember-приложения
.application-container
  &, & > div
    height 100%

  // ---
  // Верхняя навигационная панель
  // ---
  .header
    height 60px
    background-color $identity
    position relative
    z-index 100
    box-shadow 0 1px 3px rgba(0,0,0,.2)

    clearfix()
    & *
      display inline-block
      vertical-align middle

    .brand
      margin 0 30px 0 40px
      padding 8px 0
      height 44px
    ul
      li
        margin 0 5px
        a
          font-weight 700
          font-size 15px
          line-height 19px
          buttonize true $identity $white
      &.nav-right
        position absolute
        right 40px
        top 15px

  .main
    width auto
    margin 0 auto
    clearfix()
    position relative
    min-height calc(100vh - 60px)
    background $lgrey

    .aside
      position relative
      background $lgrey
      width $aside_width
      border-right 1px solid $dgrey

      float left
      height calc(100vh - 60px)
      overflow-y auto
      overflow-x auto

    .aside + .section
      float left
      height calc(100vh - 60px)
      overflow-y scroll
      overflow-x auto
      width calc(100% - 302px)
      position relative
      border none
      padding 0
      .item-info
        padding 30px

    .section
      width 800px
      margin 0 auto
      position relative
      background $white
      box-sizing border-box
      padding 20px 20px
      border-left 1px solid $dgrey
      border-right 1px solid $dgrey




