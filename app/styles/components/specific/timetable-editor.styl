@import 'nib'

// ------------------
// Стили компонента
// ------------------
.timetable-editor-component

  // --------------------------
  // Компонент для одного дня
  // --------------------------
  .day-editor-component
    font-size 12px
    user-select: none
    position relative

    .weekday
      display inline-block
      font-size 14px
      cursor pointer
      color rgba(0,0,0,0.3)
      font-weight 500
      font-size 12px
      margin 0

      .weekday-label
        padding-left 20px
        position relative

        &:before
          content ''
          left 2px
          top 4px
          position absolute
          display block
          width 12px
          height 6px
          border-left 2px solid rgba(0,0,0,0.3)
          border-bottom 2px solid rgba(0,0,0,0.3)
          transform rotate(-45deg)

      input[type=checkbox]
        display none

      input[type=checkbox]:checked + .weekday-label
        color #3a8ff5

        &:before
          border-left 2px solid #3a8ff5
          border-bottom 2px solid #3a8ff5

    .add-button
      font-size 20px
      // margin 0 5px
      // position absolute
      // top 0px
      // right 0px
      margin-left 5px
      margin-top 5px
      font-size 12px
      // border-radius 2px
      padding 1px 4px
      // border 1px solid #3a8ff5
      color #3A8FF5
      cursor pointer

      // &:not(.active)
      //   pointer-events none
      //   opacity 0.2

      &.active
        cursor pointer

    // Интервалы времени
    .day-intervals
      min-height 32px
      margin-bottom 8px

      .not-working
        line-height 24px
        margin-left 20px
        font-weight 400
        color #d35744


    // Интервал времени
    .day-interval
      display inline-block
      margin 1px 2px
      padding 3px 5px

      // Кнопочка для удаления интервала
      .remove-button
        margin-left 5px
        cursor pointer
        color rgba(0,0,0,0.2)

        transition 0.15s color ease

        &:not(.active)
          pointer-events none
          opacity 0.3

        &.active
          cursor pointer

          &:hover
            color rgba(0,0,0,0.3)

  // ---
  // Компонент для выбора времени
  // ---
  .time-editor-component
    display inline-block
    position relative

    input
      width 40px
      height 18px
      text-align center
      border none
      outline none
      border-bottom 1px solid rgba(0,0,0,0.3)

      &:focus
        border-bottom 1px solid #3a8ff5

    // Список с подсказками
    .suggestion-list
      position absolute
      box-shadow 0px 1px 3px #eee
      max-height 200px
      background-color white
      border-radius 3px
      border 1px solid #dedede
      overflow hidden
      z-index 3
      top 25px
      left -10px

      // Анимация появления
      transition all 0.1s ease
      &:not(.shown)
        visibility hidden
        opacity 0
        transform scale(0.2)

      &.shown
        visibility visible
        opacity 1

      .suggestion
        padding 2px 15px
        cursor pointer
        color #333

        &.selected
          background-color rgba(0,0,0,0.02)




