/***
 * Стили конфигуратора
 ***/
.dish-configurator
  .panel-heading
    position relative

    input[type=text]
      font-size 2rem
      background none
      border 1px solid transparent
      border-radius 4px
      padding 0 10px

      &:hover
        border 1px solid #c2c2c2

    button.delete-configuration
      display block
      position absolute
      right 8px
      top 8px
      color #CE2222
      background none


  .table
    tbody
      td
        padding 0

        &:nth-child(2)
          border-right none

        &:nth-child(3)
          border-left none
          color #dc6162


    input[type=text]
      padding 8px
      width 100%
      border none

    tr.add-line
      button
        text-align center
        cursor pointer
        text-align center
        padding 8px
        width 100%
        height 3.6rem
        background none
        border none

        &:hover
          background #f6f6f6

  .delete-line
    display block
    width 100%
    padding 0 0.2rem
    margin 0
    line-height 3.6rem
    font-size 2.6rem
    background none
    border none
    position relative
    bottom 2px

  .min-max-values
    input[type=text]
      margin 0 5px
      width 4rem

      &.max
        width 10rem


