@import 'nib'
@import '../../tools/_colors'

.sm-text-area
  border-radius 8px
  border 2px solid $dgrey
  background none
  padding 7px 8px
  font-size 14px
  box-sizing border-box
  display block
  height 100px
  font-family 'Proxima Nova'


  &.full-width
    width 100%

  &.no-resize
    resize none

  &:focus,
  &:active
    outline none
    border 2px solid $identity


