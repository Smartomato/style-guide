@import 'nib'

@import '../../tools/_colors'

$toggleBackground  = $white
$toggleForeground  = $identity

input[type="checkbox"].sm-toggle
  appearance none
  background-color darken($toggleBackground, 2%)
  border 1px solid $toggleForeground
  border-radius 24px
  box-shadow inset 0 0 0 1px $toggleForeground
  cursor pointer
  height 20px
  position relative
  transition border .25s .15s, box-shadow .25s .3s, padding .25s
  width 35px
  vertical-align top

  &:focus
    outline none

  &:after
    background-color $toggleBackground
    border 1px solid $toggleForeground
    border-radius 24px
    box-shadow inset 0 -3px 3px hsla(0,0%,0%,.025), 0 1px 4px hsla(0,0%,0%,.15), 0 4px 4px hsla(0,0%,0%,.1)
    content ''
    display block
    height 16px
    left 0
    position absolute
    right 16px
    top 0
    transition border .25s .15s, left .25s .1s, right .15s .175s

  &:checked
    border-color $toggleForeground
    box-shadow inset 0 0 0 13px $toggleForeground
    padding-left 18px
    transition border .25s, box-shadow .25s, padding .25s .15s

    &:after
      border-color $toggleForeground
      left 16px
      right 0
      transition border .25s, left .15s .25s, right .25s .175s


