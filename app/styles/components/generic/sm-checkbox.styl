@import 'nib'
@import '../../tools/_colors'


// ---
// Чекбокс
// ---
.sm-checkbox
  user-select none
  display inline-block
  padding-left 30px
  cursor pointer

  > input[type=checkbox]
    display none

  > .label
    display inline-block
    position relative
    font-size 14px
    line-height 20px
    margin-top 15px
    color $textDarkGray

    &:before
      content ''
      display block
      position absolute
      box-sizing border-box
      width 20px
      height 20px
      left -30px
      top -1px
      background white
      border-radius 8px
      border 1px solid $lgrey

    &:after
      content ''
      display none
      position absolute
      box-sizing border-box
      width 6px
      height 10px
      border-radius 1px
      left -23px
      top 3px
      border-right 2px solid white
      border-bottom 2px solid white
      transform rotate(45deg)

  input[type=checkbox]:checked + .label
    color $textBlack

    &:before
      background $identity

    &:after
      display block

